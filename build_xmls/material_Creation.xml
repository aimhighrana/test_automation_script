<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Material_Creation_Automation_Testcases" verbose="10" parallel="tests"
	thread-count="1">
	<listeners>
        <listener class-name="org.uncommons.reportng.HTMLReporter" />
        <listener class-name="org.uncommons.reportng.JUnitXMLReporter" />
    </listeners>
	<parameter name="env" value="QAH" />

	 <test name="Test 1">
		<classes>
			<class name="Test.MaterialCreationTestcases">
				<methods>
					<include name="verify_That_Defaults_Are_Working_In_The_Transaction_Screen_According_To_The_User_Configured"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Test 2">
		<classes>
			<class name="Test.MaterialCreationTestcases">
				<methods>
					<include name="verify_That_Created_Record_Is_Visible_At_Reviewer_Task_List"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Test 3">
		<classes>
			<class name="Test.MaterialCreationTestcases">
				<methods>
					<include name="verify_Data_Verification_For_Reviewer_At_Transaction_Screen"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Test 4">
		<classes>
			<class name="Test.MaterialCreationTestcases">
				<methods>
					<include name="verify_Rejecting_The_Request_From_Approver"></include>
				</methods>
			</class>
		</classes>
	</test>
	<test name="Test 5">
	<classes>
		<class name="Test.MaterialCreationTestcases">
			<methods>
				<include name="verify_Approving_The_Request_From_Approver"></include>
			</methods>
		</class>
	</classes>
</test>

	<test name="Test 6">
		<classes>
			<class name="Test.MaterialCreationTestcases">
				<methods>
					<include name="verify_Extend_Plant_Hierarchy_From_The_Created_Record_Which_Is_In_System_Status"></include>
				</methods>
			</class>
		</classes>
	</test>

	<test name="Test 7">
		<classes>
			<class name="Test.MaterialCreationTestcases">
				<methods>
					<include name="verify_Checking_Mandatory_Fields_Error_On_The_Execution_Page"></include>
				</methods>
			</class>
		</classes>
	</test>
</suite>
